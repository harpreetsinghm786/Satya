<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="14dp"
        app:cardCornerRadius="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comments"
        android:textColor="@color/color2"
        android:fontFamily="@font/open_sans_semibold"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="15sp"></TextView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"></View>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:id="@+id/recycler_view_comment_box"
        android:layout_height="wrap_content"></androidx.recyclerview.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="top"
       android:background="@color/color1"
        android:weightSum="10">
    <EditText
        android:layout_width="0dp"
        android:layout_weight="9"
        android:hint="Add a comment..."
        android:textSize="12sp"
        android:paddingLeft="10dp"
        android:textColorHint="@color/white"
        android:id="@+id/comment_text"
        android:textColor="@color/white"
        android:backgroundTint="@android:color/transparent"
        android:layout_height="wrap_content"></EditText>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"

            >
            <View
                android:layout_width="1sp"
                android:layout_height="match_parent"
                android:background="@color/color2"></View>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_forward_white"
            android:tint="@color/color2"
            android:drawableTint="@color/color2"
            android:rotation="-45"
            android:text="Post"
            android:layout_margin="10dp"
            android:drawablePadding="5dp"
            android:textSize="12sp"
            android:elevation="0dp"
            android:backgroundTint="@color/color1"
            android:textColor="@color/color2"
            android:id="@+id/post"
            android:textAllCaps="false"></ImageView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
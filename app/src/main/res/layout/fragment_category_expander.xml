<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".category_expander">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:id="@+id/banner"
            ></com.makeramen.roundedimageview.RoundedImageView>
    </RelativeLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/category_list"></androidx.recyclerview.widget.RecyclerView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:weightSum="10">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    >
                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/timming_tag"
                        android:layout_marginLeft="10dp"></ImageView>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="9"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat"
                        android:textColor="@color/color1"
                        android:textStyle="bold"
                        android:paddingRight="10dp"
                        android:layout_marginTop="5dp"
                        android:textSize="13dp"
                        android:text="We're here to help. Our essential delivery services are open from:"></TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat"
                        android:textColor="@color/color2"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:layout_marginTop="5dp"
                        android:text="9:00 AM to 5:00 PM"></TextView>


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:background="@drawable/grey_gradient"
                android:paddingBottom="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"

                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="30dp">
                        >
                        <View
                            android:layout_width="0dp"
                            android:layout_height="2dp"
                            android:layout_weight="1.5"
                            android:background="@color/color1"></View>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="7"
                            android:gravity="center"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            android:textColor="@color/color2"
                            android:fontFamily="@font/montserrat"
                            android:text=" Do Some More with Satya"></TextView>
                        <View
                            android:layout_width="0dp"
                            android:layout_height="2dp"
                            android:layout_weight="1.5"
                            android:background="@color/color1"></View>
                    </LinearLayout>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="175dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:padding="7dp"
                        android:src="@mipmap/free_iron_banner"
                        ></ImageView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10"

                    >
                    <com.makeramen.roundedimageview.RoundedImageView
                        android:layout_width="0dp"
                        android:layout_weight="5"
                        android:layout_height="220dp"
                        android:src="@mipmap/lowest_prices_banner"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        ></com.makeramen.roundedimageview.RoundedImageView>
                    <com.makeramen.roundedimageview.RoundedImageView
                        android:layout_width="0dp"
                        android:layout_weight="5"
                        android:layout_height="220dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:src="@mipmap/customer_satisfaction"
                        ></com.makeramen.roundedimageview.RoundedImageView>
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/footer"></ImageView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</LinearLayout>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/lightblack</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="colorAccent">@color/liteblack</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/lightblack</item>
        <item name="android:windowDisablePreview">true</item>

    </style>

    <style name="Radio_button_style" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
    </style>

    <style name="loginStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/color1</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="colorAccent">@color/color2</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="editTextColor">@color/white</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/color1</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowContentTransitions" tools:targetApi="lollipop">true</item>

    </style>
    <style name="SearchViewStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:editTextColor">@color/white</item>

    </style>

    <style name="mytheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="colorAccent">@color/liteblack</item>
        <item name="android:windowContentTransitions" tools:targetApi="lollipop">true</item>

    </style>
    <style name="paymentstyle" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="colorAccent">@color/liteblack</item>
        <item name="android:windowContentTransitions" tools:targetApi="lollipop">true</item>

    </style>
    <style name="AppTheme.NoActionBar">

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="colorPrimaryDark">@color/lightblack</item>
    </style>


    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black</item>
    </style>
    <style name="AppthemeRatingbar" parent="Theme.AppCompat"
        >
        <item name="colorAccent">@color/golden</item>
        <item name="colorControlNormal">@color/liteblack</item>
    </style>

    <style name="MyChkTextColor">
        <item name="android:textColor">#FF8282</item>4
    </style>
    <style name="Collapsedbar" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/color2</item>


    </style>


    <style name="TabLayoutStyle" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">13sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="expandedtitle" parent="Theme.AppCompat.NoActionBar">
        <item name="android:fontFamily">@font/advent_pro_medium</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="expandedsubtitle" parent="Theme.AppCompat.NoActionBar">
        <item name="android:fontFamily">@font/advent_pro_medium</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="collapssubtitle" parent="Theme.AppCompat.NoActionBar">
        <item name="android:fontFamily">@font/advent_pro_medium</item>
        <item name="android:textSize">13sp</item>
    </style>
    <!--    =========================Cart stylings===================================-->

    <style name="expandsubtitlebarsimple" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/color1</item>


    </style>
    <style name="collapstitle" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textSize">25sp</item>
        <item name="android:fontFamily">@font/advent_pro_medium</item>
    </style>
    <style name="collapssubtitlesimple" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textSize">25sp</item>
    </style>

    <style name="collapsed_title" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/advent_pro_medium</item>
    </style>

    <!--    ===========================================================================-->


    <style name="expandsubtitlebarsimple2" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/advent_pro_medium</item>
        <item name="android:textColor">@color/color1</item>
    </style>


</resources>

